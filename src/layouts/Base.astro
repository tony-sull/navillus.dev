---
import '@chisel-ui/core/reset.css'
import '@chisel-ui/core/core.css'
import '@chisel-ui/core/theme.css'
import { FullBleed } from '@chisel-ui/astro'
import Head, { Props as HeadProps } from '../components/Head.astro'

export interface Props extends HeadProps {}

const { ...head } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <Head {...head} />
    </head>
    <FullBleed maxWidth="60rem" gapInline="5vw" as="body">
        <slot />
    </FullBleed>
</html>

<style>
    :root {
        /* Font Scale */
        --text-4xl: 2.488rem;
        --text-3xl: 2.074rem;
        --text-2xl: 1.728rem;
        --text-xl: 1.44rem;
        --text-lg: 1.2rem;
        --text-base: 1rem;
        --text-sm: 0.833rem;

        --color-orange: #ffc331;
        --color-black: #37322e;
        --shadow-sm: drop-shadow(-1px 1px 2px rgba(0, 0, 0, 0.25));
        --shadow-md: drop-shadow(0px 2px 4px rgba(0, 0, 0, 0.25));
        --shadow-secondary-sm: drop-shadow(
            2px 3px 6px var(--chisel-secondary)
        );
        --shadow-secondary: drop-shadow(
            3px 5px 10px var(--chisel-secondary)
        );
    }

    body {
        background-color: var(--chisel-neutral-50);
        color: var(--color-black);
        font-size: 14px;
        line-height: 1.75;
        font-family: Poppins, system-ui, -apple-system, BlinkMacSystemFont,
            'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans',
            sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji',
            'Segoe UI Symbol', 'Noto Color Emoji';
    }

    :focus,
    .hover\:outline:hover {
        outline: 2px dashed var(--chisel-secondary);
        outline-offset: 0.25rem;
    }

    @media (min-width: 375px) {
        border-bottom-style: ; {
            font-size: 16px;
        }
    }

    @media (min-width: 768px) {
        body {
            font-size: 18px;
        }
    }
</style>
